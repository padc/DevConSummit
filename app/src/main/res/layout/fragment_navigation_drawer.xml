<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ECECED"
              android:orientation="vertical"
              android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/cont_user_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:padding="4dp"
        android:gravity="center_horizontal">

        <!--<com.pkmmte.view.CircularImageView-->
        <!--android:layout_width="75dp"-->
        <!--android:layout_height="75dp"-->
        <!--android:src="@drawable/ic_launcher"-->
        <!--android:padding="4dp"-->
        <!--app:border_color="@color/green"-->
        <!--app:border="true"-->
        <!--app:border_width="2dp"/>-->

        <!--app:corner_radius="3dip"-->

        <com.makeramen.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_profile"
            android:src="@drawable/ic_action_person"
            android:scaleType="centerCrop"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:border_width="2dp"
            app:border_color="@color/green"
            app:mutate_background="true"
            app:oval="true"/>

        <TextView
            android:id="@+id/txt_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/green"
            android:textSize="21sp"
            android:typeface="sans"
            android:text="ERICSON LUCIANO"/>

        <TextView
            android:id="@+id/txt_profile_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Junior Designer at Thousand Minds"/>

        <TextView
            android:id="@+id/txt_main_technology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Ruby on Rails"/>

        <TextView
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navotas City, Metro Manila"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lvw_drawer_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#EFEFF4"
        tools:context="ph.devcon.android.navigation.NavigationDrawerFragment"/>

</LinearLayout>