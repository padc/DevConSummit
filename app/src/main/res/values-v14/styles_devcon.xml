<resources>

    <style name="Theme.Devcon" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_devcon</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Devcon</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Devcon</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Devcon</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Devcon</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Devcon</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_devcon</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_devcon</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Devcon</item>

        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="ActionBar.Solid.Devcon" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_devcon</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_devcon</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_devcon</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Devcon</item>
        <item name="android:titleTextStyle">@style/ActionBar.Solid.Devcon.TitleTextStyle</item>
    </style>

    <style name="ActionBar.Transparent.Devcon" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_devcon</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Devcon</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Devcon.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Devcon</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Devcon</item>
    </style>

</resources>