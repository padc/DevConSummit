<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="android:typeface">serif</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="CustomTabPageIndicator">
        <item name="android:background">@drawable/tab_indicator_ab_devcon</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/ActionBar.Solid.Devcon.TitleTextStyle</item>
    </style>

    <style name="EditProfileOtherProfile">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="EditProfileHeaderTextView">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="EditProfileEditTextItem">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="EngageHeaderTextView">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="TourTitle">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TourContent">
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17dp</item>
    </style>

</resources>
